@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="mvcCRUDCtrl">
    <div class="divList">
        <p><b><i>Lista de Contatos</i></b></p>
        <table class="table table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>Nome</b></td>
                <td><b>Email</b></td>
                <td><b>Telefone</b></td>
      
            </tr>
            <tr ng-repeat="pessoa in pessoas">
                <td>
                    {{pessoa.Id}}
                </td>
                <td>
                    {{pessoa.Nome}}
                </td>
                <td>
                    {{pessoa.Email}}
                </td>
                <td>
                    {{pessoa.Telefone}}
                </td>           
                <td>
                    <span ng-click="editarPessoa(pessoa)" class="btn btn-primary">Editar</span>
                    <span ng-click="deletarPessoa(pessoa)" class="btn btn-danger">Deletar</span>
                </td>
            </tr>
        </table>
    </div>
    <span ng-click="AdicionarPessoaDiv()" class="btn btn-success">
        Adicionar Pessoa
    </span>
    <div ng-show="divPessoa">
        <p class="divHead"></p>
        <table class="table">
            <tr>
                <td><b><i>{{Action}} Pessoa</i></b></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><b>Id</b></td>
                <td>
                    <input type="text" disabled="disabled" ng-model="PessoaId" />
                </td>
                <td><b>Nome</b></td>
                <td>
                    <input type="text" ng-model="PessoaNome" />
                </td>
            </tr>
            <tr>
                <td><b>Email</b></td>
                <td>
                    <input type="text" ng-model="PessoaEmail" />
                </td>
                <td><b>Telefone</b></td>
                <td>
                    <input type="text" ng-model="PessoaTelefone" />
                </td>
            </tr>
            <tr>
               
                <td>
                    <input type="button" class="btn btn-default" value="Salvar" ng-click="AdicionarAtualizarPessoa()" />
                    <input type="button" class="btn btn-danger" value="Cancelar" ng-click="Cancel()" />
                </td>
            </tr>
        </table>
    </div>
</div>
